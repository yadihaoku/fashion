<resources>


    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="tabItem">
        <!--<item name="android:background">@drawable/selector_bottom_tab_bar</item>-->
        <item name="android:background">@drawable/control_background_40dp_material</item>
        <item name="android:textColor">@color/color_selector_bottom_tab_bar</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_list_style">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="toolbarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="secondTitleStyle">
        <item name="android:background">@color/primary_tip_bg</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLightTextColor</item>
    </style>

    <style name="iconButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/color_stroke</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/color_selector_bottom_tab_bar</item>
    </style>
</resources>
